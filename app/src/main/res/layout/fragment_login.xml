<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.LoginFragment"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <EditText
        android:id="@+id/loginEditLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/loginHintLogin"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/loginEditPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/loginHintPassword"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/loginBtnText"
        android:layout_marginTop="10dp"/>

</LinearLayout>